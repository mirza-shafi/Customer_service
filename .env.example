# Database Configuration (Separate DB for Customer Service)
DATABASE_URL=postgresql://customer_user:customer_password@localhost:5434/customer_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_DB=1

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Security Settings
SECRET_KEY=your_customer_service_secret_key_here
ALGORITHM=RS256

# JWT Settings (Must match Auth Service)
JWKS_URL=http://localhost:8000/.well-known/jwks.json
JWT_ISSUER=https://auth.brainchat.cloud
JWT_AUDIENCE=mission-auth

# Meta Graph API (For fetching customer profiles)
META_GRAPH_API_VERSION=v21.0
